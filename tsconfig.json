{
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "target": "es2020", // Node.js 14
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "baseUrl": "."
  },
  "include": ["src", "test"]
}
