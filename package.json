{
  "name": "apollo-ds-rest",
  "version": "0.0.1",
  "author": "Dustin Deus <deusdustin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/StarpTech/apollo-datasource-rest"
  },
  "homepage": "https://github.com/StarpTech/apollo-datasource-rest#readme",
  "bugs": {
    "url": "https://github.com/StarpTech/apollo-datasource-rest/issues"
  },
  "scripts": {
    "build": "tsc",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "cov": "nyc --reporter=lcov --reporter=text-summary -- npm run test",
    "test": "ava",
    "prepare": "npm run build",
    "release": "release-it --github.release"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": ">=14"
  },
  "files": [
    "dist/src"
  ],
  "sideEffects": false,
  "xo": {
    "prettier": true,
    "rules": {
      "@typescript-eslint/no-empty-function": "off",
      "node/no-deprecated-api": "off",
      "node/prefer-global/url": "off",
      "node/prefer-global/url-search-params": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "unicorn/prefer-node-protocol": "off",
      "ava/assertion-arguments": "off",
      "@typescript-eslint/no-unsafe-member-access": "off",
      "@typescript-eslint/no-unsafe-return": "off",
      "@typescript-eslint/no-unsafe-assignment": "off",
      "@typescript-eslint/no-unsafe-call": "off",
      "@typescript-eslint/no-unsafe-argument": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "import/order": "off"
    }
  },
  "ava": {
    "files": [
      "test/*"
    ],
    "extensions": [
      "ts"
    ],
    "timeout": "10s",
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@alloc/quick-lru": "^5.2.0",
    "agentkeepalive": "^4.1.4",
    "apollo-datasource": "^0.9.0",
    "apollo-server-caching": "^0.7.0",
    "apollo-server-errors": "^2.5.0",
    "got": "^11.8.2",
    "graphql": "^15.5.0",
    "keyv": "^4.0.3"
  },
  "devDependencies": {
    "release-it": "^14.8.0",
    "ava": "^3.15.0",
    "nock": "^13.1.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.0.0",
    "uid": "^2.0.0",
    "typescript": "^4.3.2",
    "xo": "^0.40.2"
  }
}
